# Configuração de Produção - DentalCloud

# Servidor
PORT=3002
NODE_ENV=production

# Frontend URL
FRONTEND_URL=https://dentalcloud.com.br

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stripe (Pagamentos)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Mercado Pago (Opcional)
MERCADOPAGO_ACCESS_TOKEN=APP_USR-...
MERCADOPAGO_PUBLIC_KEY=APP_USR-...

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Email (SendGrid ou similar)
SENDGRID_API_KEY=SG...
EMAIL_FROM=noreply@dentalcloud.com.br

# Database (PostgreSQL para produção)
DATABASE_URL=postgresql://user:password@host:5432/dentalcloud

# Redis (Cache e Filas)
REDIS_URL=redis://localhost:6379

# AWS S3 (Arquivos)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=dentalcloud-files

# Sentry (Monitoramento de Erros)
SENTRY_DSN=https://...@sentry.io/...

# Analytics
GOOGLE_ANALYTICS_ID=G-...

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features Flags
ENABLE_WHATSAPP=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS=false
ENABLE_MULTI_TENANCY=true
